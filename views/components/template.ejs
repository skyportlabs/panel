            // Check if the current page URL contains the link URL
            if (currentPageUrl === linkUrl) {
              // Remove all existing classes
              link.className = 'nav-link';
      
              // Add the specified classes
              link.classList.add(
                'hover:scale-105', 'transition', 'bg-[#171717]', 'text-white', 'mt-1', 'pl-4', 'mx-4', 'group', 'flex', 'gap-x-3', 'shadow-sm', 'rounded-lg', 'py-2', 'text-sm', 'leading-6', 'font-semibold',
